<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="noticeNameSpace">
    <insert id="addnotice" parameterType="map">
         INSERT INTO z_notice(notice_name,notice_date,notice_userid,notice_address,notice_street,notice_docnum,notice_type,notice_url,notice_context) VALUES (#{name},#{date},#{g_userid},#{local},#{address},#{docnum},#{type},#{url},#{filename});
    </insert>
    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM z_notice;
    </select>
    <select id="selectnotice" parameterType="map" resultType="map">
        SELECT * FROM z_notice limit #{pageNum},#{pageSize};
    </select>
    <select id="noticedetail" parameterType="map" resultType="map">
        SELECT * FROM z_notice WHERE notice_id=#{noticeid};
    </select>
</mapper>
