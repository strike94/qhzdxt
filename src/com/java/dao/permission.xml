<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="permissionNameSpace">
    <select id="permissionselect" resultType="map">
        SELECT userid,username,rolepermission FROM z_user z1  LEFT JOIN z_role z2 ON z1.`roleid`=z2.`roleid`
</select>
    <delete id="permissiontruncate">
        TRUNCATE TABLE z_lookrole
    </delete>
    <insert id="permissionselectinsert" parameterType="map">
        INSERT INTO z_lookrole(userid,username,rolepermission) VALUES (#{userid},#{username},#{rolepermisssion});
    </insert>
</mapper>
